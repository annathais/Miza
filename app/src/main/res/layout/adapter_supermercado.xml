<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_supermercado"
    android:layout_margin="6dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/card_sm_consultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />
        <!--  TEM QUE MUDAR A MARGEM E O TAMANHO-->
        <TextView
            android:id="@+id/card_sm_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/card_sm_consultado"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/card_sm_consultado"
            android:layout_marginLeft="80dp"
            android:text="Nome Supermercado"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/card_sm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/card_sm_nome"
            android:layout_alignLeft="@id/card_sm_nome"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_keyboard_arrow_up_black_24dp" />

        <LinearLayout
            android:id="@+id/card_info_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_info_sm"
            android:layout_below="@id/card_info_sm"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/card_info_sm_rua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rua"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:id="@+id/card_info_sm_numero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Numero" />

            <TextView
                android:id="@+id/card_info_sm_bairro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bairro" />

            <TextView
                android:id="@+id/card_info_sm_telefone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Telefone" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>