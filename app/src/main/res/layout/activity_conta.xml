<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"/>
    <Button
        android:id="@+id/bt_conta_detalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detalhes_conta"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margem_superior_conta"
        android:layout_marginLeft="@dimen/margem_esquerda_conta"
        android:layout_marginRight="@dimen/margem_direita_conta"
        />
    <Button
        android:id="@+id/bt_conta_excluir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/excluir_conta"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margem_superior_conta"
        android:layout_marginLeft="@dimen/margem_esquerda_conta"
        android:layout_marginRight="@dimen/margem_direita_conta"
        />
    <Button
        android:id="@+id/bt_conta_sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sair"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margem_superior_conta"
        android:layout_marginLeft="@dimen/margem_esquerda_conta"
        android:layout_marginRight="@dimen/margem_direita_conta"
        />

</LinearLayout>
